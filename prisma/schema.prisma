generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  HR
  MANAGER
  TEAM_LEAD
  EMPLOYEE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERN
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum DocumentType {
  ID_PROOF
  ADDRESS_PROOF
  EDUCATION
  EXPERIENCE
  CONTRACT
  OTHER
}

enum AssetCategory {
  LAPTOP
  DESKTOP
  MOBILE
  TABLET
  MONITOR
  KEYBOARD
  MOUSE
  HEADSET
  FURNITURE
  VEHICLE
  ID_CARD
  ACCESS_CARD
  SOFTWARE_LICENSE
  OTHER
}

enum AssetStatus {
  AVAILABLE
  ASSIGNED
  MAINTENANCE
  RETIRED
  LOST
  DAMAGED
}

enum AssetCondition {
  NEW
  EXCELLENT
  GOOD
  FAIR
  POOR
}

// Organization Settings
model OrganizationSettings {
  id                    String   @id @default(uuid()) @db.Uuid
  name                  String   @default("Organization")
  logoUrl               String?  // URL to organization logo
  fiscalYearStart       Int      @default(1) // Month (1-12)
  workingDaysPerWeek    Int      @default(5)
  defaultLeaveAllocation Json?   // Default leave allocation for new employees
  permissions           Json?    // Configurable permissions for roles
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("organization_settings")
}

// Branch/Location
model Branch {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  code      String   @unique
  address   String?
  city      String?
  state     String?
  country   String?
  phone     String?
  email     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users       User[]
  departments Department[]

  @@map("branches")
}

// Department
model Department {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  code        String   @unique
  description String?
  branchId    String?  @db.Uuid
  branch      Branch?  @relation(fields: [branchId], references: [id])
  headId      String?  @db.Uuid
  head        User?    @relation("DepartmentHead", fields: [headId], references: [id])
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users User[]
  teams Team[]

  @@map("departments")
}

// Team
model Team {
  id           String      @id @default(uuid()) @db.Uuid
  name         String
  code         String      @unique
  description  String?
  departmentId String      @db.Uuid
  department   Department  @relation(fields: [departmentId], references: [id])
  leadId       String?     @db.Uuid
  lead         User?       @relation("TeamLead", fields: [leadId], references: [id])
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  users User[]

  @@map("teams")
}

// User/Employee
model User {
  id             String          @id @default(uuid()) @db.Uuid
  employeeId     String          @unique
  email          String          @unique
  password       String
  firstName      String
  lastName       String
  phone          String?
  profilePicture String?         // URL to profile picture
  role           Role            @default(EMPLOYEE)
  status         UserStatus      @default(ACTIVE)

  // Social Links
  linkedIn       String?
  twitter        String?
  github         String?
  website        String?

  // Personal Info
  dateOfBirth    DateTime?
  gender         Gender?
  maritalStatus  MaritalStatus?
  nationality    String?
  address        String?
  city           String?
  state          String?
  country        String?
  postalCode     String?
  emergencyContact     String?
  emergencyContactPhone String?

  // Employment Info
  employmentType EmploymentType  @default(FULL_TIME)
  joiningDate    DateTime?
  probationEndDate DateTime?
  confirmationDate DateTime?
  resignationDate  DateTime?
  lastWorkingDate  DateTime?

  // Organization
  branchId       String?         @db.Uuid
  branch         Branch?         @relation(fields: [branchId], references: [id])
  departmentId   String?         @db.Uuid
  department     Department?     @relation(fields: [departmentId], references: [id])
  teamId         String?         @db.Uuid
  team           Team?           @relation(fields: [teamId], references: [id])
  managerId      String?         @db.Uuid
  manager        User?           @relation("ManagerEmployee", fields: [managerId], references: [id])
  subordinates   User[]          @relation("ManagerEmployee")
  designation    String?

  // Metadata
  lastLoginAt    DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  createdBy      String?         @db.Uuid

  // Relations
  documents       UserDocument[]
  leaveAllocations LeaveAllocation[]
  leaveRequests   LeaveRequest[]
  leaveApprovals  LeaveRequest[]  @relation("LeaveApprover")
  notices         Notice[]        @relation("NoticeCreator")
  teamsLed        Team[]          @relation("TeamLead")
  departmentsLed  Department[]    @relation("DepartmentHead")
  assignedAssets  Asset[]         @relation("AssetAssignee")
  assetHistory    AssetAssignment[]
  attendance      Attendance[]
  employeeRequests EmployeeRequest[]
  requestApprovals EmployeeRequest[] @relation("RequestApprover")

  @@map("users")
}

// User Documents
model UserDocument {
  id          String       @id @default(uuid()) @db.Uuid
  userId      String       @db.Uuid
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        DocumentType
  name        String
  fileName    String
  filePath    String
  fileSize    Int?
  mimeType    String?
  expiryDate  DateTime?
  isVerified  Boolean      @default(false)
  verifiedBy  String?      @db.Uuid
  verifiedAt  DateTime?
  notes       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("user_documents")
}

// Leave Type (Organization-wide)
model LeaveType {
  id                String   @id @default(uuid()) @db.Uuid
  name              String   @unique
  code              String   @unique
  description       String?
  defaultDays       Float    @default(0)  // Default annual allocation
  maxDays           Float?   // Max days that can be allocated
  carryForward      Boolean  @default(false)
  maxCarryForward   Float?   // Max days that can be carried forward
  isPaid            Boolean  @default(true)
  isActive          Boolean  @default(true)
  requiresApproval  Boolean  @default(true)
  minDaysNotice     Int      @default(0)  // Minimum days in advance to apply
  color             String?  // For UI display
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  allocations  LeaveAllocation[]
  requests     LeaveRequest[]

  @@map("leave_types")
}

// Leave Allocation (Per User, Per Year)
model LeaveAllocation {
  id            String    @id @default(uuid()) @db.Uuid
  userId        String    @db.Uuid
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveTypeId   String    @db.Uuid
  leaveType     LeaveType @relation(fields: [leaveTypeId], references: [id])
  year          Int
  allocated     Float     // Total allocated days
  used          Float     @default(0)  // Days used
  carriedOver   Float     @default(0)  // Days carried from previous year
  adjusted      Float     @default(0)  // Manual adjustments
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([userId, leaveTypeId, year])
  @@map("leave_allocations")
}

// Leave Request
model LeaveRequest {
  id            String      @id @default(uuid()) @db.Uuid
  userId        String      @db.Uuid
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaveTypeId   String      @db.Uuid
  leaveType     LeaveType   @relation(fields: [leaveTypeId], references: [id])
  startDate     DateTime
  endDate       DateTime
  days          Float       // Number of days (can be 0.5 for half day)
  isHalfDay     Boolean     @default(false)
  halfDayType   String?     // "FIRST_HALF" or "SECOND_HALF"
  reason        String?
  status        LeaveStatus @default(PENDING)
  approverId    String?     @db.Uuid
  approver      User?       @relation("LeaveApprover", fields: [approverId], references: [id])
  approvedAt    DateTime?
  rejectionReason String?
  cancelReason  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("leave_requests")
}

// Audit Log
model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  action    String
  entity    String
  entityId  String?
  details   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

// Notice/Announcement
model Notice {
  id          String    @id @default(uuid()) @db.Uuid
  title       String
  content     String
  type        String    @default("GENERAL") // GENERAL, IMPORTANT, URGENT
  isActive    Boolean   @default(true)
  publishedAt DateTime  @default(now())
  expiresAt   DateTime?
  createdById String    @db.Uuid
  createdBy   User      @relation("NoticeCreator", fields: [createdById], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("notices")
}

// Asset (Company Property)
model Asset {
  id              String         @id @default(uuid()) @db.Uuid
  assetTag        String         @unique // Unique identifier like AST-00001
  name            String
  category        AssetCategory
  brand           String?
  model           String?
  serialNumber    String?        @unique
  description     String?
  purchaseDate    DateTime?
  purchasePrice   Float?
  warrantyExpiry  DateTime?
  status          AssetStatus    @default(AVAILABLE)
  condition       AssetCondition @default(NEW)
  location        String?        // Storage location when not assigned
  notes           String?
  specifications  Json?          // Flexible specs like RAM, storage, etc.

  // Current assignment
  assignedToId    String?        @db.Uuid
  assignedTo      User?          @relation("AssetAssignee", fields: [assignedToId], references: [id])
  assignedAt      DateTime?

  // Metadata
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Relations
  assignments     AssetAssignment[]

  @@map("assets")
}

// Asset Assignment History
model AssetAssignment {
  id            String    @id @default(uuid()) @db.Uuid
  assetId       String    @db.Uuid
  asset         Asset     @relation(fields: [assetId], references: [id], onDelete: Cascade)
  userId        String    @db.Uuid
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedAt    DateTime  @default(now())
  returnedAt    DateTime?
  assignedById  String    @db.Uuid // Who assigned the asset
  returnedById  String?   @db.Uuid // Who processed the return
  condition     AssetCondition // Condition at time of assignment
  returnCondition AssetCondition? // Condition at return
  notes         String?
  returnNotes   String?

  @@map("asset_assignments")
}

enum AttendanceSource {
  WEB
  MOBILE
  BIOMETRIC
  RFID
  MANUAL
  OTHER
}

enum DeviceStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
}

// Attendance Device (Biometric, RFID, etc.)
model AttendanceDevice {
  id          String       @id @default(uuid()) @db.Uuid
  name        String
  type        String       // BIOMETRIC, RFID, FACE
  deviceId    String       @unique // Serial or unique ID
  location    String?
  status      DeviceStatus @default(ACTIVE)
  apiKey      String?      // For device authentication
  lastSync    DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("attendance_devices")
}

// Attendance Record
model Attendance {
  id          String           @id @default(uuid()) @db.Uuid
  userId      String           @db.Uuid
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime         @db.Date
  checkIn     DateTime
  checkOut    DateTime?
  notes       String?
  source      AttendanceSource @default(WEB)
  deviceId    String?          // For biometric/RFID device identification
  location    String?          // Location info if available
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@unique([userId, date])
  @@map("attendance")
}

// Holiday Calendar
model Holiday {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  date        DateTime @db.Date
  type        String   @default("PUBLIC") // PUBLIC, OPTIONAL, RESTRICTED
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date, name])
  @@map("holidays")
}

enum RequestType {
  ASSET
  DOCUMENT
  GENERAL
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

// Employee Self-Service Requests
model EmployeeRequest {
  id            String        @id @default(uuid()) @db.Uuid
  userId        String        @db.Uuid
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          RequestType
  subject       String
  description   String
  priority      String        @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  status        RequestStatus @default(PENDING)

  // For asset requests
  assetCategory String?

  // For document requests
  documentType  String?

  // Approval
  approverId    String?       @db.Uuid
  approver      User?         @relation("RequestApprover", fields: [approverId], references: [id])
  approvedAt    DateTime?
  response      String?       // Admin response/notes

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("employee_requests")
}
